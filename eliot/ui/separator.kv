<Separator@Widget>:
    color: 1, 1, 1, 1
    thickness: dp(2)

    canvas:
        Color:
            rgba: root.color
        Rectangle:
            pos: self.pos
            size: self.size

<HSeparator@Separator>:
    size_hint_y: None
    height: root.thickness

<VSeparator@Separator>:
    size_hint_x: None
    width: root.thickness
