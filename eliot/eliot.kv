GridLayout:
    cols: 2
    side_menu: side_menu

    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'resources/images/background.png'

    ScrollView:
        do_scroll_x: False
        do_scroll_y: True

        size_hint_x: 0.1

        GridLayout:
            id: side_menu
            cols: 1
            on_parent: self.bind(minimum_height=self.setter('height'))
            size_hint_y: None

            Button:
                id: power_btn
                size_hint_y: None
                height: self.width
                background_color: 1,1,1,0

                canvas:
                    Rectangle:
                        source: 'resources/icons/power.png'
                        size: (self.height-25, self.height-25)
                        pos: (self.pos[0]+20, self.pos[1]+15)

                on_press: app.on_power_btn_pressed()

            Button:
                size_hint_y: None
                height: self.width
                background_color: 1,1,1,0

                canvas:
                    Rectangle:
                        source: 'resources/icons/settings.png'
                        size: (self.height-25, self.height-25)
                        pos: (self.pos[0]+20, self.pos[1]+15)

    ScrollView:
        do_scroll_x: False
        do_scroll_y: True

        GridLayout:
            id: main_menu
            on_parent: self.bind(minimum_height=self.setter('height')); app.create_main_menu_buttons(self)
            cols: 4
            size_hint_y: None
            spacing: 25
            padding: 15
