#:import Button kivy.uix.button.Button

<GPIOPage>:

    gpio_list: gpio_list

    GridLayout:
        cols: 2

        ScrollView:
            size_hint_x: 0.2
            do_scroll_x: False
            do_scroll_y: True

            BoxLayout:
                orientation: "vertical"
                id: gpio_list
                size_hint_y: None
                on_parent: root.initGPIOList()

        GridLayout:
            cols: 1

            Label:
                text: 'GPIO [6]'
                size_hint_y: 0.2

            Button:
                text: 'cleanup'
                size_hint_y: 0.2

            GridLayout:
                cols: 2

                Button:
                    text: 'ON'

                Button:
                    text: 'OFF'
